<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title><%=title%></title>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css
        ">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js
        "></script>
        <link rel="stylesheet" href="/css/index.css" />
    </head>
    <body>

      <%-include('_header') -%>
        <!-- Post Container (Partials) -->
        <% if(locals.user) {%>     
            <section class="post_container"> 
                <%-include('_post')-%>
            </section> 
         <%}%>

        <% if(locals.user){ %>
        <!-- Friends Container -->
          <section id="user_friends">
            <h4>Friends</h4>
            <%for(u of all_users){ %>
                <p>
                    <a href="/users/profile/<%=u.id%>"><%=u.name%></a>
                </p>
            <%}%>
          </section>
        <%}%>
        <script>
            <%if(flash.success && flash.success.length>0){%>  
          new Noty({
            theme: 'relax',
            text: "<%=flash.success%>",
            type: 'success',
            layout: 'topRight',
            timeout: 1500
          }).show();
            <%}%>
            <%if(flash.error && flash.success.error>0){%>  
          new Noty({
            theme: 'relax',
            text: "<%=flash.error%>",
            type: 'error',
            layout: 'topRight',
            timeout: 1500
          }).show();
            <%}%>
        </script>
    </body>
</html>

